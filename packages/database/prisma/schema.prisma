generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String        @id @default(cuid())
  name        String
  email       String        @unique
  password    String
  avatar      String
  Discussions Discussions[]
}

model Discussions {
  id          String  @id @default(cuid())
  title       String
  content     String
  category    String
  replies     Int     @default(0)
  views       Int     @default(0)
  poster      User    @relation(fields: [posterId], references: [id])
  posterId    String
  repliesList Reply[]
}

model Reply {
  id           String      @id @default(cuid())
  name         String
  avatar       String
  origin       String
  content      String
  date         String
  discussion   Discussions @relation(fields: [discussionId], references: [id])
  discussionId String
}
