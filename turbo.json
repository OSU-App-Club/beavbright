{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "**/.env.*local",
        "**/.env.local",
        "**/.env.*",
        "**/.env"
    ],
    "globalEnv": [
        "NODE_ENV",
        "JWT_SECRET"
    ],
    "pipeline": {
        "build": {
            "dependsOn": [
                "^db:generate",
                "db:push",
                "^build"
            ],
            "outputs": [
                ".next/**",
                "!.next/cache/**"
            ]
        },
        "lint": {},
        "dev": {
            "dependsOn": [
                "^dev",
                "^db:generate"
            ],
            "cache": false,
            "persistent": true
        },
        "db:init": {
            "cache": false
        },
        "db:generate": {
            "cache": false
        },
        "db:push": {
            "cache": false
        }
    }
}