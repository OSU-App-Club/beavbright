{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": ["NODE_ENV", "JWT_SECRET"],
    "globalDependencies": [
        "**/.env.*local"
    ],
    "pipeline": {
        "build": {
            "dependsOn": [
                "^build",
                "^db:generate"
            ],
            "outputs": [
                ".next/**",
                "!.next/cache/**"
            ]
        },
        "lint": {},
        "dev": {
            "dependsOn": [
                "^dev",
                "^db:generate"
            ],
            "cache": false,
            "persistent": true
        },
        "db:generate": {
            "cache": false
        },
        "db:push": {
            "cache": false
        }
    }
}
